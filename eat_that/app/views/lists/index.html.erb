<h1>Listing lists</h1>

<table>
  <thead>
    <tr>
      <th>Id recipe</th>
      <th>Id ingredient</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.id_recipe %></td>
        <td><%= list.id_ingredient %></td>
        <td><%= list.quantity %></td>
        <td><%= list.unit %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>
